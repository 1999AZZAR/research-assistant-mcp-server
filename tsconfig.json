{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "rootDir": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "resolveJsonModule": true
  },
  "include": ["research-server.ts", "index.ts"],
  "exclude": ["node_modules", "dist", "**/__tests__/**", "**/*.test.ts"]
}
